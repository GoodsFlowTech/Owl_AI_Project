import streamlit as st
st.set_page_config(page_title="Owl AI Assistant", page_icon="ğŸ¦‰", layout="centered")
st.title("ğŸ¦‰ Owl AI - Your Smart Python Assistant")
st.write("""
Welcome to **Owl AI**, a simple demo web app built with Streamlit.
Ask questions or give commands and select a mode to get instant responses.
This app demonstrates a Python developerâ€™s ability to create an interactive web interface.
""")
user_input = st.text_input("ğŸ’¬ Ask Owl AI something:")
mode = st.selectbox("Select a mode:", ["Explain", "Summarize", "Translate", "Joke", "Advice"])
def owl_ai_response(user_text, mode):
    if not user_text:
        return "Please enter a question above."
    if mode == "Explain":
        return f"Owl AI explains: '{user_text}' is a concept that can be understood by breaking it down into simple terms."
    elif mode == "Summarize":
        return f"Owl AI summary: The main idea of '{user_text}' is to simplify complex information."
    elif mode == "Translate":
        return f"Owl AI translation: '{user_text}' means the same in every language of curiosity!"
    elif mode == "Joke":
        return "Why did the Python developer go broke? Because he used up all his cache! ğŸğŸ˜‚"
    elif mode == "Advice":
        return "Always keep learning â€” even the wisest owl started as a curious hatchling! ğŸ¦‰"
    else:
        return "Owl AI is thinking..."

if st.button("ğŸª¶ Ask Owl AI"):
    response = owl_ai_response(user_input, mode)
    st.subheader("ğŸ¦‰ Owl AI says:")
    st.success(response)
st.markdown("""
